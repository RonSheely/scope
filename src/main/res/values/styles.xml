<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!--
      Base application theme, dependent on API level. This theme is
      replaced by AppBaseTheme from res/values-vXX/styles.xml on newer
      devices.
  -->
  <style name="AppBaseTheme" parent="android:Theme.Material.Light.DarkActionBar">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->
  </style>

  <!-- Application theme. -->
  <style name="AppTheme" parent="AppBaseTheme">
    <!-- All customizations that are NOT specific to a particular
         API-level can go here.
    -->

    <item name="pref_input">@drawable/ic_mic_black_24dp</item>
    <item name="pref_fill">@drawable/ic_cloud_black_24dp</item>
    <item name="pref_hold">@drawable/ic_file_upload_black_24dp</item>
    <item name="pref_screen">@drawable/ic_brightness_low_black_24dp</item>
    <item name="pref_theme">@drawable/ic_brightness_high_black_24dp</item>
    <item name="pref_about">@drawable/ic_info_outline_black_24dp</item>

  </style>

  <!--
      Base application theme, dependent on API level. This theme is
      replaced by AppDarkBaseTheme from res/values-vXX/styles.xml on
      newer devices.
  -->
  <style name="AppDarkBaseTheme" parent="android:Theme.Material">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->
  </style>

  <!-- Application theme. -->
  <style name="AppDarkTheme" parent="AppDarkBaseTheme">
    <!-- All customizations that are NOT specific to a particular
         API-level can go here.
    -->

    <item name="pref_input">@drawable/ic_mic_white_24dp</item>
    <item name="pref_fill">@drawable/ic_cloud_white_24dp</item>
    <item name="pref_hold">@drawable/ic_file_upload_white_24dp</item>
    <item name="pref_screen">@drawable/ic_brightness_low_white_24dp</item>
    <item name="pref_theme">@drawable/ic_brightness_high_white_24dp</item>
    <item name="pref_about">@drawable/ic_info_outline_white_24dp</item>

  </style>

</resources>
